html(lang='es')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title='Productos'
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="stylesheet", href="/style.css")
    body
        h1(class="text-center my-4")='Bienvenido a Shop of Roll'
        h1(class="text-center")='Listado de productos'
        div(class='mx-auto w-75 table-responsive')
            table(class='table table-dark table-hover')
                thead(align="center")
                    tr
                        th='Imagen'
                        th='Nombre'
                        th='Precio'
                        th='Descripcion'
                        th='Más'
                        th='Añadir'
                        th='Editar'
                        th
                tbody(align="center")
                    each p in productos
                        tr
                            td
                                img(src=p.img, width="50px", height="50px")
                            td=p.name
                            td=`$${p.price}`
                            td=p.description
                            td
                                a(class="btn btn-primary rounded-0" type="button" data-toggle="tooltip" href=`http://localhost:3000/item/${p.id}` title="Ver mas")
                                    i(class="fa fa-plus")
                            td
                                a(class="btn btn-success rounded-0" type="button" data-toggle="tooltip" title="Añadir")
                                    i(class="fa fa-shopping-cart")
                            td
                                a(class="btn btn-warning rounded-0" type="button" data-toggle="tooltip" href=`http://localhost:3000/update/${p.id}` title="Editar")
                                    i(class="fa fa-edit")
                            td
                                a(class="btn btn-danger rounded-0" type="button" data-toggle="tooltip" href=`http://localhost:3000/delete/${p.id}` title="Eliminar")
                                    i(class="fa fa-trash")                         
        hr
        a(class="btn btn-warning btn-sm" href="http://localhost:3000/login")='Inicio'
        
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous")