html(lang='es')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title='Productos'
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="stylesheet", href="style.css")
    body
        div(class='d-flex align-items-center flex-column')
            h1(class="text-center my-4")='Bienvenido a Shop of Roll'
            h1(class="text-center")='Listado de productos'
            table(class='table table-dark table-hover' style="width: 50%;")
                thead(align="center")
                    tr
                        th='ID'
                        th='Nombre'
                        th='Precio'
                        th='Imagen'
                tbody(align="center")
                    each p in productos
                        tr
                            td=p.id
                            td=p.title
                            td=p.price
                            td
                                img(src=p.pic, width="50px", height="50px")
        hr
        a(class="btn btn-warning btn-sm" href="http://localhost:3000/login")='Inicio'
        
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous")