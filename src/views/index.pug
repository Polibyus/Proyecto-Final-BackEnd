html(lang='es')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title='SoR || Inicio'
        link(rel="icon" href="/favicon.ico")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="stylesheet", href="/style.css")
    body
        nav(class="navbar navbar-expand-lg navbar-dark shadow-5-strong")
            div(class="container-fluid")
                a(class="navbar-brand" href="/")
                    img(src="https://cdn.pixabay.com/photo/2017/08/31/04/01/d20-2699387_1280.png" alt="logo" width="50" height="50")
                button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
                    span(class="navbar-toggler-icon")
                div(class="collapse navbar-collapse" id="navbarNav")
                    ul(class="navbar-nav me-auto mb-2 mb-lg-0")
                        li(class="nav-item")
                            a(class="nav-link active" href="/")='Inicio'
                        li(class="nav-item")
                            a(class="nav-link" href="/productos")='Productos'
                        if user.mod
                            li(class="nav-item")
                                a(class="nav-link" href="/nuevoProducto")='Ingresar nuevo producto'
                        li(class="nav-item")
                            a(class="nav-link" href="/chat")='Chat'
                    div(class="d-flex")
                        a(href="/cart" class="btn btn-primary text-white shadow")
                            i(class="fa fa-shopping-cart" aria-hidden="true")
        section(class="shadow-5-strong h-75 d-flex align-items-center justify-content-center")
            div(class="container")
                div(class="row")
                    div(class="col-lg-6 order-2 order-lg-1")
                        h1(class="text-light")=`Bienvenido ${user.username} a Shop of Roll`
                        p(class="lead text-light")='Donde traemos tus sue√±os 2D a realidades 3D.'
                        p
                            a(href="/productos" class="btn btn-primary shadow mr-2")='Ver Productos'
                        p
                            a(href="/logout" class="btn btn-outline-primary")='Log out'
                    div(class="col-lg-6 order-1 order-lg-2")
                        img(src="https://www.bcn3d.com/wp-content/uploads/2021/08/Types-of-3D-printers-1024x683.jpg" alt="landing image" class="img-fluid rounded")

    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous")
    script(src="main.js")