html(lang='es')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title='Inicio'
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="stylesheet", href="/style.css")
    body
        h1(class="text-center my-4")=`Bienvenido a Shop of Roll`
        div(class='main-section mx-auto w-75')
            section(class="msger")
                header(class="msger-header")='Chat de la comunidad'
                    div(class="msger-header-title")
                        i(class="fas fa-comment-alt")
                    div(class="msger-header-options")
                        span
                            i(class="fas fa-cog")
                main(class="msger-chat")
                    div(id='messages')
                    each m in mensajes
                        div(class="msg left-msg")
                            div(class="msg-img" style="background-image: url(https://i.pinimg.com/564x/3b/b7/46/3bb746efe9e3f38f946f31db4dd1dba5.jpg)")
                            div(class="msg-bubble")
                                div(class="msg-info")
                                    div(class="msg-info-name")=`${m.nick}`
                                    div(class="msg-info-time")=`${m.createdAt.getHours()}:${m.createdAt.getMinutes()}`
                                div(class="msg-text")=`${m.mensaje}`
                form(class="msger-inputarea")
                    input(type="text" class="msger-input" id="msg" name="msg" required placeholder="Mensaje")
                    button(type="submit" class="msger-send-btn")='Enviar'
        
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous")
    script(src="/socket.io/socket.io.js")
    script(src="main.js")
            