html(lang='es')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title='Login'
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="stylesheet", href="style.css")
    body
        h1(class="text-center my-4")='Bienvenido a Shop of Roll'
        if error
            h3(class="alert alert-danger text-center" role="alert")='Usuario o contraseña erroneos'
        div(id="login")
            div(class="container")
                div(id="login-row" class="row justify-content-center align-items-center")
                    div(id="login-column" class="col-md-6")
                        div(id="login-box" class="col-md-12")
                            form(id="login-form" class="form" action="/login" method="post")
                                h3(class="text-center text-info")="Ingresa a tu cuenta"
                                div(class="form-group")
                                    label(for="username" class="text-info")="Usuario:"
                                    input(class="form-control" type="text" id="username" name="username" required)
                                div(class="form-group")
                                    label(for="password" class="text-info")="Contraseña:"
                                    input(class="form-control" type="password" id="password" name="password" required)
                                div(class="form-group")
                                    button(class="btn btn-warning" type="submit")='Ingresar'
                                div(class="form-group")
                                    a(href="http://localhost:3000/signup" class="btn btn-success btn-sm")="Registrate"

    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous")
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")