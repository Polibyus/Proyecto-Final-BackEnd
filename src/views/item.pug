html(lang='es')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title=`${item.name} || Detalle`
        link(rel="icon" href="/favicon.ico")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="stylesheet", href="/style.css")
    body
        nav(class="navbar navbar-expand-lg navbar-dark shadow-5-strong")
            div(class="container-fluid")
                a(class="navbar-brand" href="/")
                    img(src="https://cdn.pixabay.com/photo/2017/08/31/04/01/d20-2699387_1280.png" alt="logo" width="50" height="50")
                button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
                    span(class="navbar-toggler-icon")
                div(class="collapse navbar-collapse" id="navbarNav")
                    ul(class="navbar-nav me-auto mb-2 mb-lg-0")
                        li(class="nav-item")
                            a(class="nav-link" href="/")='Inicio'
                        li(class="nav-item")
                            a(class="nav-link active" href="/productos")='Productos'
                        if mod
                            li(class="nav-item")
                                a(class="nav-link" href="/nuevoProducto")='Ingresar nuevo producto'
                        li(class="nav-item")
                            a(class="nav-link" href="/chat")='Chat'
                    div(class="d-flex")
                        a(href="/cart" class="btn btn-primary text-white shadow")
                            i(class="fa fa-shopping-cart" aria-hidden="true")
        div(class='container d-flex justify-content-center mt-5')
            div(class='col-lg-8 border p-3 mb-3 bg-white')
                div(class='row m-0')
                    div(class='col-lg-6 left-side-product-box pb-3')
                        img(src=`${item.img}` alt=`${item.name}` width="500" height="500" class="border p-3 img-fluid")
                    div(class='col-lg-6')
                        div(class='right-side-pro-detail border p-3 m-0')
                            div(class='row')
                                div(class='col-lg-12')
                                    h3=`${item.name}`
                                div(class='col-lg-12')
                                    p(class="m-0 p-0 price-pro")=`${item.price}`
                                    hr(class="p-0 m-0")
                                div(class='col-lg-12 pt-2')
                                    h5='Descripcion'
                                    span=`${item.description}`
                                div(className="col-lg-12")
                                    h6=`Cat.: ${item.category}`
                                div(className="col-lg-12")
                                    a(class="btn btn-success rounded-2" type="button" data-toggle="tooltip" href=`/addtocart/${item.id}` title="Añadir")='Añadir al carro'
                                    span='              '
                                    a(class="btn btn-primary rounded-2" type="button" data-toggle="tooltip" href=`/productos` title="Añadir")='Ver productos'

        
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous")