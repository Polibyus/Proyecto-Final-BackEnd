html(lang='es')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title='Sign UP'
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="stylesheet", href="/style.css")
    body
            h1(class="text-center my-4")='Bienvenido a Shop of Roll'
            div(id="login")
                div(class="container")
                    div(id="login-row" class="row justify-content-center align-items-center")
                        div(id="login-column" class="col-md-6")
                            div(id="login-box" class="col-md-12")
                                form(id="login-form" class="form" action="/update" method="post")
                                    h3(class="text-center text-info")="Actualizar producto"
                                    div(class="form-group")
                                        label(for="id" class="text-info")="ID:"
                                        input(class="form-control" type="text" id="id" name="id" value=`${item.id}` readonly)
                                    div(class="form-group")
                                        label(for="name" class="text-info")="Nombre:"
                                        input(class="form-control" type="text" id="name" name="name" value=`${item.name}` required)
                                    div(class="form-group")
                                        label(for="price" class="text-info")="Precio:"
                                        input(class="form-control" type="number" id="price" name="price" value=`${item.price}` required)
                                    div(class="form-group")
                                        label(for="img" class="text-info")="Link a la imagen:"
                                        input(class="form-control" type="text" id="img" name="img" value=`${item.img}` required)
                                    div(class="form-group")
                                        label(for="description" class="text-info")="Descripcion:"
                                        input(class="form-control" type="text" id="description" name="description" value=`${item.description}` required)
                                    div(class="form-group")
                                        label(for="category" class="text-info")="Categoria (1):"
                                        input(class="form-control" type="text" id="category" name="category" value=`${item.category}` required)
                                    div(class="form-group")
                                        button(class="btn btn-warning" type="submit")='Actualizar'
            hr
            a(class="btn btn-warning btn-sm" href="http://localhost:3000/login")='Inicio'
    
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous")