html(lang='es')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title='SoR || Carga'
        link(rel="icon" href="/favicon.ico")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="stylesheet", href="/style.css")
    body
        nav(class="navbar navbar-expand-lg navbar-dark shadow-5-strong")
            div(class="container-fluid")
                a(class="navbar-brand" href="/")
                    img(src="https://cdn.pixabay.com/photo/2017/08/31/04/01/d20-2699387_1280.png" alt="logo" width="50" height="50")
                button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
                    span(class="navbar-toggler-icon")
                div(class="collapse navbar-collapse" id="navbarNav")
                    ul(class="navbar-nav me-auto mb-2 mb-lg-0")
                        li(class="nav-item")
                            a(class="nav-link" href="/")='Inicio'
                        li(class="nav-item")
                            a(class="nav-link" href="/productos")='Productos'
                        if mod
                            li(class="nav-item")
                                a(class="nav-link active" href="/nuevoProducto")='Ingresar nuevo producto'
                        li(class="nav-item")
                            a(class="nav-link" href="/chat")='Chat'
                    div(class="d-flex")
                        a(href="/cart" class="btn btn-primary text-white shadow")
                            i(class="fa fa-shopping-cart" aria-hidden="true")
        if msg 
            h3(class="alert alert-primary text-center" role="alert")=`${msg}`
        div(id="login")
            div(class="container")
                div(id="login-row" class="row justify-content-center align-items-center")
                    div(id="login-column" class="col-md-6")
                        div(id="login-box" class="col-md-12")
                            form(id="login-form" class="form" action="/nuevoProducto" method="post")
                                h3(class="text-center text-info")="Ingresar nuevo producto"
                                div(class="form-group")
                                    label(for="name" class="text-info")="Nombre:"
                                    input(class="form-control" type="text" id="name" name="name" required)
                                div(class="form-group")
                                    label(for="price" class="text-info")="Precio:"
                                    input(class="form-control" type="number" id="price" name="price" required)
                                div(class="form-group")
                                    label(for="img" class="text-info")="Link a la imagen:"
                                    input(class="form-control" type="text" id="img" name="img" required)
                                div(class="form-group")
                                    label(for="description" class="text-info")="Descripcion:"
                                    input(class="form-control" type="text" id="description" name="description" required)
                                div(class="form-group")
                                    label(for="category" class="text-info")="Categoria (1):"
                                    input(class="form-control" type="text" id="category" name="category" required)
                                div(class="form-group")
                                    button(class="btn btn-warning" type="submit")='Ingresar'

    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous")